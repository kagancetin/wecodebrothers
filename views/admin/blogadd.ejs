<% include header %>

<!-- Begin Page Content -->
<div class="container-fluid">
  <div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Blog Ekle</h1>
    <a
      href="/admin/blogs"
      class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm"
      ><i class="fas fa-download fa-sm text-white-50"></i> Bloglarımı Göster</a
    >
  </div>
  <div class="card shadow mb-4">
    <!-- Card Header - Accordion -->
    <a
      href="#collapseCard1"
      class="d-block card-header py-3 collapsed"
      data-toggle="collapse"
      role="button"
      aria-expanded="false"
      aria-controls="collapseCard1"
    >
      <h6 class="m-0 font-weight-bold text-primary">Blog Adı:</h6>
    </a>
    <!-- Card Content - Collapse -->
    <div class="collapse" id="collapseCard1">
      <div class="card-body">
        <input
          type="text"
          class="form-control form-control-user"
          id="blogTitle"
          placeholder="Blog adı"
        />
      </div>
    </div>
  </div>

  <div class="card shadow mb-4">
    <!-- Card Header - Accordion -->
    <a
      href="#collapseCard2"
      class="d-block card-header py-3 collapsed"
      data-toggle="collapse"
      role="button"
      aria-expanded="false"
      aria-controls="collapseCard2"
    >
      <h6 class="m-0 font-weight-bold text-primary">Thumbnail:</h6>
    </a>
    <!-- Card Content - Collapse -->
    <div class="collapse" id="collapseCard2">
      <div class="card-body">
        <input
          type="file"
          class="form-control form-control-user"
          id="blogThumbnail"
          placeholder="Thumbnail"
        />
      </div>
    </div>
  </div>

  <div class="card shadow mb-4">
    <!-- Card Header - Accordion -->
    <a
      href="#collapseCard3"
      class="d-block card-header py-3 collapsed"
      data-toggle="collapse"
      role="button"
      aria-expanded="false"
      aria-controls="collapseCard3"
    >
      <h6 class="m-0 font-weight-bold text-primary">Kısa açıklama:</h6>
    </a>
    <!-- Card Content - Collapse -->
    <div class="collapse" id="collapseCard3">
      <div class="card-body">
        <textarea
          class="form-control"
          id="blogDescription"
          aria-label="With textarea"
        ></textarea>
      </div>
    </div>
  </div>

  <div class="card shadow mb-4">
    <!-- Card Header - Accordion -->
    <a
      href="#collapseCard4"
      class="d-block card-header py-3 collapsed"
      data-toggle="collapse"
      role="button"
      aria-expanded="false"
      aria-controls="collapseCard4"
    >
      <h6 class="m-0 font-weight-bold text-primary">Blog İçeriği:</h6>
    </a>
    <!-- Card Content - Collapse -->
    <div class="collapse" id="collapseCard4">
      <div class="card-body">
        <textarea id="blogContent"></textarea>
      </div>
    </div>
  </div>

  <div class="card shadow mb-4">
    <!-- Card Header - Accordion -->
    <a
      href="#collapseCard5"
      class="d-block card-header py-3 collapsed"
      data-toggle="collapse"
      role="button"
      aria-expanded="false"
      aria-controls="collapseCard5"
    >
      <h6 class="m-0 font-weight-bold text-primary">Tag:</h6>
    </a>
    <!-- Card Content - Collapse -->
    <div class="collapse" id="collapseCard5">
      <div class="card-body">
        <textarea
          class="form-control"
          id="blogTag"
          aria-label="With textarea"
        ></textarea>
      </div>
    </div>
  </div>

  <a href="#" onclick="blogAdd()" class="btn btn-success btn-icon-split">
    <span class="icon text-white-50">
      <i class="fas fa-arrow-right"></i>
    </span>
    <span class="text">Blok Ekle</span>
  </a>

  <!-- Page Heading -->
</div>
<!-- /.container-fluid -->

<% include footer %>

<script>
  CKEDITOR.replace("blogContent", {
    language: "tr",
    uiColor: "#4369d7",
    toolbarCanCollapse: true
  });
</script>
<script src="/js/blog.js"></script>
